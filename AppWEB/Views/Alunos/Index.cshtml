@model List<AlunoModel>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Idade</th>
            <th scope="col">Contato</th>
            <th scope="col">Email</th>
            <th scope="col">CEP</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (AlunoModel alunos in Model)
            {
        <tr>
            <td>@alunos.Nome</td>
            <td>@alunos.Idade</td>
            <td>@alunos.Contato</td>
            <td>@alunos.Email</td>
            <td>@alunos.CEP</td>         
        </tr>
            }
        }
        
    </tbody>
</table>

<div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <a class="btn btn-dark" type="button" asp-controller="Alunos" asp-action="Adicionar">Adicionar novo aluno</a>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <a class="btn btn-dark" type="button" asp-controller="Alunos" asp-action="Editar">Editar aluno</a>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <a class="btn btn-dark" type="button" asp-controller="Alunos" asp-route-id="@aluno.Id" asp-action="Excluir">Excluir aluno</a>
</div>