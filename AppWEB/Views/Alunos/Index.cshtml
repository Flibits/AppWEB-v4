@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success col-3">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
<div class="alert alert-danger col-4">
    @TempData["MensagemErro"]
</div>
}



@model List<AlunoModel>

<table class="table">
    <thead>
        <tr>

            <th scope="col">Nome</th>
            <th scope="col">Idade</th>
            <th scope="col">Contato</th>
            <th scope="col">Email</th>
            <th scope="col">CEP</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (AlunoModel alunos in Model)
            {
                <tr>
                    <td>@alunos.Nome</td>
                    <td>@alunos.Idade</td>
                    <td>@alunos.Contato</td>
                    <td>@alunos.Email</td>
                    <td>@alunos.CEP</td>

                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a class="btn btn-dark" type="button" asp-controller="Alunos" asp-route-cep="@alunos.CEP" asp-action="BuscarEndereco">Endereco</a>
                            <a class="btn btn-dark" type="button" asp-controller="Alunos" asp-route-id="@alunos.Id" asp-action="Editar">Editar aluno</a>
                            <a class="btn btn-dark" type="button" asp-controller="Alunos" asp-route-id="@alunos.Id" asp-action="Excluir">Excluir aluno</a>
                        </div>


                    </td>
                </tr>
            }
        }

    </tbody>
</table>

<div class="d-grid gap-2 d-md-flex justify-content-center">
    <a class="btn btn-dark" type="button" asp-controller="Alunos" asp-action="Adicionar">Adicionar novo aluno</a>
</div>


