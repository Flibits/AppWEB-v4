@model AlunoModel

<form asp-controller="Alunos" asp-action="EditarAluno" method="post">

<input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="exampleInputEmail1">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="exampleInputNome">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Idade</label>
        <input type="number" asp-for="Idade" class="form-control" id="exampleInputIdade">
    </div>
    <div class="form-group">
        <label for="exampleInputNumber1">Contato</label>
        <input type="number" asp-for="Contato" class="form-control" id="exampleInputNumber" aria-describedby="numberHelp" placeholder="Ex.: (00)00000-0000">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ex.: xxx@gmail.com">
    </div>
    <div class="form-group">
        <label for="exampleInputCEP1">CEP</label>
        <input type="number" asp-for="CEP" class="form-control" id="exampleInputNumber" aria-describedby="numberHelp" placeholder="Ex.: 00000-000">
    </div>
    
    <button type="submit" class="btn btn-dark">Enviar</button>

    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <a class="btn btn-dark" type="button" asp-controller="Alunos" asp-action="Index">Voltar</a>
    </div>

</form>

